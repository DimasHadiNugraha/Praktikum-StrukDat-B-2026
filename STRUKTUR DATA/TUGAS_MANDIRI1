class tumpukanPiring:
    def __init__(self):
        self.tumpukan = []

    # menambahkan data piring pada tumpukan(PUSH)
    def push(self, nomor_piring, jenis_piring, status_piring):
        piring = {
            "Nomor Piring": nomor_piring,
            "Jenis Piring": jenis_piring,
            "Status Piring": status_piring
        }
        self.tumpukan.append(piring)
        print("Piring berhasil ditambahkan ke tumpukan.")

    # mengambil pring palng atas dari tumpukan(POP)
    def pop(self):
        if self.is_empty():
            print("Tumpukan piring kosong, tidak ada yang bisa diambil.")
            return None
        else:
            piring = self.tumpukan.pop()
            print("Piring berhasil diambil dari tumpukan.")
            return piring

    # melihat piring ditumpukan tanpa mengambilnya(PEEK)
    def peek(self):
        if self.is_empty():
            print("Tumpukan piring kosong.")
            return None
        else:
            return self.tumpukan[-1]

    # mengecek apakah tumpukan piring dalam keadaan kosong atau tidak
    def is_empty(self):
        return len(self.tumpukan) == 0

    # Melihat jumlah keseluruhan prirng pada tumpukan
    def size(self):
        return len(self.tumpukan)
# Membuat objek stack piring
tumpukan = tumpukanPiring()

# Menambahkan piring
tumpukan.push(1, 'piring makan', 'bersih')
tumpukan.push(2, 'piring sup', 'kotor')
tumpukan.push(3, 'piring makanan manis','bersih')
tumpukan.push(4,'piring tambahan','bersih')

# Melihat piring paling atas
print("Piring paling atas:", tumpukan.peek())

# Mengambil piring paling atas
print("Piring diambil:", tumpukan.pop())

# Mengecek jumlah piring
print("Jumlah piring:", tumpukan.size())

# Mengecek apakah tumpukan kosong
print("Apakah tumpukan kosong?", tumpukan.is_empty())

